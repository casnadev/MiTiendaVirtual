@model IEnumerable<MiTiendaVirtual.Models.Tarjeta>

@{
    ViewData["Title"] = "Tarjetas";
}

<h2>Lista de Tarjetas</h2>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id de la Tarjeta</th>
            <th>Marca</th>
            <th>Número</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Marca</td>
                <td>@t.Numero</td>
            </tr>
        }
    </tbody>
</table>